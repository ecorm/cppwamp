---
Checks: >
  clang-analyzer-*,
  cppcoreguidelines-*,
  -cppcoreguidelines-pro-type-union-access
WarningsAsErrors: ''
HeaderFilterRegex: ''
AnalyzeTemporaryDtors: false
FormatStyle: none
CheckOptions:
  - key: cppcoreguidelines-special-member-functions.AllowSoleDefaultDtor
    value: true
  - key: cppcoreguidelines-macro-usage.AllowedRegexp
    value: "\
CPPWAMP_[A-Z]+_VERSION|\
CPPWAMP_CONVERSION|\
CPPWAMP_ENABLED_TYPE|\
CPPWAMP_GENERATE|\
CPPWAMP_LOGIC|\
CPPWAMP_NEEDS"
...
