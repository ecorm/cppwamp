{
    "version": 2,
    "controller": {},
    "workers": [
        {
            "type": "router",
            "realms": [
                {
                    "name": "cppwamp.test",
                    "roles": [
                        {
                            "name": "anonymous",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "rawsocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 12345
                    },
                    "serializers": [
                        "json"
                    ],
                    "debug": true
                },
                {
                    "type": "rawsocket",
                    "endpoint": {
                        "type": "unix",
                        "path": "./udstest"
                    },
                    "serializers": [
                        "msgpack"
                    ],
                    "debug": true
                }
            ]
        },
        {
            "type": "router",
            "realms": [
                {
                    "name": "cppwamp.authtest",
                    "roles": [
                        {
                            "name": "ticketrole",
                            "permissions": [
                                {
                                    "uri": "",
                                    "match": "prefix",
                                    "allow": {
                                        "call": true,
                                        "register": true,
                                        "publish": true,
                                        "subscribe": true
                                    },
                                    "disclose": {
                                        "caller": true,
                                        "publisher": true
                                    },
                                    "cache": true
                                }
                            ]
                        }
                    ]
                }
            ],
            "transports": [
                {
                    "type": "rawsocket",
                    "endpoint": {
                        "type": "tcp",
                        "port": 23456
                    },
                    "serializers": [
                        "json"
                    ],
                    "auth": {
                        "ticket": {
                            "type": "static",
                            "principals": {
                                "alice": {
                                    "ticket": "password123",
                                    "role": "ticketrole"
                                }
                            }
                        }
                    },
                    "debug": true
                }
            ]
        }
    ]
}
